            <% dishes.forEach((dish) => { %>
            <div class="w-full md:w-64 hover-style zoom shadow-2xl bg-orange-200 cursor-pointer rounded-t-none mb-8">
                <img class="h-90 mb-2 mx-auto rounded-t-none" src="/img/menu/<%= dish.image %>" alt="">
                <div class="text-center bg-orange-200 rounded-t-none">
                    <h2 class="mb-2 text-lg font-bold"><%= dish.name %></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= dish.size %></span>
                    <div class="flex items-center bg-orange-200 justify-around mt-3 mb-4 rounded-full">
                        <span class="font-bold text-lg">₹<%= dish.price %></span>
                        <% if(!user || user.role === 'customer') { %>
                        <button data-dish="<%= JSON.stringify(dish) %>"
                            class="add-to-cart text-center py-1 px-4 rounded-full flex items-center font-bold">
                            <span class="text-center">Add</span>
                        </button>
                        <% } %>
