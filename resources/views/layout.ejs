<!doctype html>
<html lang="en">
<head>
    <title>Barbeque</title>
    <link rel="icon" href="img/icon.png">
    <!-- <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet"> -->
    <link href="https://fonts.googleapis.com/css2?family=Lato&family=Open+Sans:wght@300;400&display=swap" rel="stylesheet">
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css" rel="stylesheet"> 
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>
    <nav class="container mx-auto flex items-center justify-between py-4">
        <div class="zoom"> 
            <a href="/"><img src="/img/logo.png" alt="logo"></a>
        </div>
        <div>
            <ul class="flex items-center">
                <li class="ml-6 zoom"><a href="/">Menu</a></li>
                    
                <% if(user){ %>
                    <% let role = '' %>
                    <% if(user.role === 'customer'){ %>
                        <% role = 'customer' %>    
                    <% }else{ %>
                        <% role = 'admin' %>
                        <li class="ml-6 zoom"><a href="/promocodes">Discounts</a></li>
                        <li class="ml-6 zoom"><a href="/dishes">Dishes</a></li> 
                        <li class="ml-6 zoom"><a href="/revenue">Revenue</a></li> 
                    <% }%>    
                    <li class="ml-6 zoom"><a href="/<%= role %>/orders">Orders</a></li> 
                    <li class="ml-6 zoom">
                        <form id="logout" action="/logout" method="POST">
                            <a onclick="document.getElementById('logout').submit()" href="#">Logout</a>
                        </form>
                    </li>
                <% } else { %>
                <li class="ml-6 zoom"><a href="/register">Register</a></li>
                <li class="ml-6 zoom"><a href="/login">Login</a></li>
                <% } %>
                <li class="ml-6"><a href="/cart" class="inline-block px-4 py-2 rounded-full flex items-center">
                    <span id="cartCounter" class="text-white font-bold pr-2 "><%= session.cart ? session.cart.totalQty : '' %></span>
                    <img style="width:24px ; height: 24px;" src="/img/shopping-cart.png" alt=""></a></li>
            </ul>
        </div>
    </nav>
    
    <%- body %>

    
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>
