<head>
    <link rel="icon" href="img/icon.png">
</head>
<section class="login flex justify-center pt-20">
    <div class="w-full max-w-xs bg-white shadow-md rounded px-8 pt-6 pb-8 mb-64">
            <% if(messages.error){ %>
                <span class="text-red-500 text-sm"><%= messages.error %></span>
            <% } %>
            <div class="text-xl font-bold mb-8">
                <h1>Add/Disable Promo Code</h1>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="activecode">
                    Active Promo Codes
                </label>
                <select class="dropdown block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline">
                </select>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="promocode">
                    Promo Code
                </label>
                <input
                    name="code"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="promo-code" type="text" placeholder="Enter promo code eg. BBQ50" required>
            </div>
        
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="amount">
                    Amount
                </label>
                <input
                    name="value" 
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="promo-value" type="text" placeholder="Enter value" required>
            </div>
            <div class="flex items-center justify-between mt-8">
                <button
                    class="btn-primary add rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                    type="submit">
                    Add
                </button>
                <button
                    class="btn-primary disable rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                    type="submit">
                    Disable
                </button>
            </div>
            <p class="text-center text-gray-500 mt-6 text-xs">
                &copy;2020 Siddharth. All rights reserved.
            </p>
    </div>
</section>
