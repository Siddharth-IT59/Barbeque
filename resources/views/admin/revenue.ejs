<section class="orders light-section">
    <div class="container mx-auto pt-12">
        <div class="border">
            <form action="/revenue/date" id="revenue-form" method="POST">
                <ul class="flex items-center px-2 py-2 bg-gray-200">
                    <li class="ml-6 font-bold text-lg">Choose Date</li>
                    <li class="ml-12 border"><input class="px-2 py-2" name="date" type="date"></li>
                    <li class="ml-6 font-bold text-lg">
                        <button class="inline-block px-6 py-2 rounded btn-primary text-white font-bold" 
                        onclick="document.getElementById('revenue-form').submit()">Search</button>
                    </li>
                </ul>
            </form>
        </div>

        <table class="w-full shadow-2xl mb-16 table-auto bg-gray-200">
            <thead class="border">
                <tr class="text-lg">
                    <th class="px-4 py-2 text-left">Customer</th>
                    <th class="px-4 py-2 text-left">Address</th>
                    <th class="px-4 py-2 text-left">Date</th>
                    <th class="px-4 py-2 text-left">Status</th>
                    <th class="px-4 py-2 text-left">Discount</th>
                    <th class="px-4 py-2 text-left">Total</th>
                </tr>
            </thead>
            <tbody>
                <% if(orders.length){ %>
                    <% orders.forEach((order) => { %>
                        <tr>
                            <td class="border px-4 py-2">
                                <%= order.customerId.name %>
                            </td>
                            <td class="border px-4 py-2">
                                <%= order.address %>
                            </td>
                            <td class="border px-4 py-2">
                                <%= moment(order.createdAt).format('Do MMMM YYYY') %>
                            </td>
                            <td class="border px-4 py-2">
                                <%= order.status %>
                            </td>
                            <td class="border px-4 py-2">
                                <% order.promoCode === '' ? order.promoCode = 'null' : order.promoCode = order.promoCode %>
                                <%= order.promoCode %>
                            </td>
                            <td class="border px-4 py-2">
                                ₹<%= order.total %>
                            </td>
                        </tr>
                    <% }) %>
                <% }else{%>
                    <tr>
                        <td class="p-4"><span>No orders found</span></td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
        <div class="mt-4 flex flex-no-wrap">
            <p class="font-bold text-2xl flex-none">Total Revenue: </p>
            <p class="flex-none ml-4 text-2xl">₹<%= revenue %></p>
        </div>
    </div>
</section>