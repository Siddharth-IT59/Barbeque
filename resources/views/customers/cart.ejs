<section class="cart py-16">
    <% if(session.cart){ %>
    <div class="order conatiner mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/shopping-cart.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="food-list">
            <% for(let dish of Object.values(session.cart.items)){ %>
            <div class="flex items-center my-8"> 
                <img class="w-20 flex-1 ml-4" src="/img/<%= dish.item.image %>" alt="">
                <div class="flex-1 ml-4">
                    <h1 class="font-bold text-xl"><%= dish.item.name %></h1>
                    <span><%= dish.item.size %></span>
                </div>
                <span class="flex-1"><%= dish.qty %></span>
                <span class="font-bold text-lg">â‚¹<%= dish.item.price*dish.qty %></span>
            </div>
            <% } %>
        </div>
        <hr>

        <div class="text-right py-4">
            <div class="mb-4">
                <input name="code" id="coupon" class="border border-gray-400 p-2 w-1/3 mr-8" type="text" placeholder="Promo Code">
                <button id="apply-promo" class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Apply</button>
            </div>
            <div class="mb-8">
                <span class="text-lg font-bold">Total Amount</span>
                <% let discount = 0 %>
                <% if(session.promo != 0 ){ %>
                    <% discount = session.promo %>
                    <span id="totalAmt" class="amount text-2xl font-bold ml-2">â‚¹<%= session.cart.totalPrice %></span>
                <% }else{ %>
                <span class="amount text-2xl font-bold ml-2">â‚¹<%= session.cart.totalPrice %></span>
                <% } %>
            </div>
            <% if(user){ %>
            <div>
                <span><%= session.cart.discount %></span>
                <form action="/orders" method="POST" class="mt-4">
                    <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone Number">
                    <input name="address" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                    <input name="promoCode" type="hidden" id="pcode">
                    <div>
                        <button type="submit" class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Order
                            Now</button>
                    </div>
                </form>
            </div>
            <% }else{ %>
                <a href="/login" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a>
            <% } %>
        </div>

    </div>
    <% } else { %>
    <div class="empty-cart py-14">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart is Empty ðŸ‘Ž</h1>
            <p class="text-gray-500 text-lg mb-20">For placing order, go to main page. <br/>
                <img  class="w-2/5 mt-8 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
                <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
            </p>
        </div>
    </div>
    <% } %>
</section>
