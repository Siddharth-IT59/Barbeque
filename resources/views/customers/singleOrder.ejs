<section class="status">
    <div class="container mx-auto">
        <div class="status-box w-2/3 mx-auto">
            <div class="flex items-center justify-between mb-16">
                <h1 class="text-xl font-bold">Live status</h1>
                <h6 class="bg-gray py-1 rounded-full px-4 text-green-600 text-xs"><%= order._id %></h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
            </div>
            <ul>
                <li class="status_line text-xl pb-16" data-status="order_placed"><span>Order Placed</span></li>
                <li class="status_line text-xl pb-16" data-status="confirmed"><span>Confirmed</span></li>
                <li class="status_line text-xl pb-16" data-status="prepared"><span>Preparation</span></li>
                <li class="status_line text-xl pb-16" data-status="delivered"><span>Out for delivery</span></li>
                <li class="status_line text-xl" data-status="completed"><span>Delivered</span></li>
            </ul>
        </div>
    </div>
</section>